{{!-- Nav-bar --}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
    <div class="container-fluid">
        <h1 class="navbar-brand fs-1">DropBlack</h1>
    </div>
</nav>

{{!-- Boton-atras --}}
<div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col">
            <p class="text-end text-light">
                <a href="/admin/shop" class="btn btn-warning me-md-5"><i class="fa-solid fa-circle-arrow-left"></i>
                    Atrás</a>
            </p>
        </div>
    </div>
</div>

{{!-- Tabla --}}
<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-xl">
            <div class="TablaModificar">
                <nav class="navbar navbar-dark bg-dark mb-4 rounded">
                    <div class="container-fluid ">
                        <a class="navbar-brand ">Modificar el Producto</a>
                    </div>
                </nav>
                <form action="/admin/shop/modificar" method="post" enctype="multipart/form-data">
                    <input type="hidden" value="{{shop.id}}" name="id">
                    <div class="mb-4">
                        <select class="form-select" aria-label="Elegir una opción" name="producto">
                            <option selected>{{shop.producto}}</option>
                            <option value="Remera">Remera</option>
                            <option value="Taza">Taza</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label for="validationDefault01" class="form-label">Nombre del producto</label>
                        <input type="text" id="validationDefault01" class="form-control" value="{{shop.nombreProducto}}"
                            name="nombreProducto">
                    </div>
                    <div class="form-group">
                        <p>
                            <label><input type="file" name="imagen" id="imagen" /></label>
                        </p>
                        <p>
                            <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar</label>
                            <input type="hidden" name="img_original" value="{{shop.img_id}}">
                        </p>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-outline-dark">Guardar</button>
                    </div>
                </form>
                {{#if error}}
                <div class="alert alert-danger" role="alert">
                    {{message}}
                </div>
                {{/if}}
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>