{{!-- Boton-atras --}}
<div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col">
            <p class="text-end text-light">
                <a href="/admin/shop" class="btn btn-warning me-md-5"><i class="fa-solid fa-circle-arrow-left"></i>
                    Atrás</a>
            </p>
        </div>
    </div>
</div>

{{!-- Tabla --}}
<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-xl">
            <div class="TablaAgregar">
                <nav class="navbar navbar-dark bg-dark mb-4 rounded">
                    <div class="container-fluid ">
                        <a class="navbar-brand ">Agrega tu Producto</a>
                    </div>
                </nav>
                <form action="/admin/shop/agregar" method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <select class="form-select" aria-label="Elegir una opción" name="producto">
                            <option selected>Elegir una opción</option>
                            <option value="Remera">Remera</option>
                            <option value="Taza">Taza</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label for="Taza" class="form-label">Nombre del producto</label>
                        <input type="text" class="form-control" name="nombreProducto">
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="imagen">Imagen</label>
                        <input type="file" class="form-control" id="imagen" name="imagen">
                    </div>
                    {{#if error}}
                    <div class="alert alert-danger" role="alert">
                        {{message}}
                    </div>
                    {{/if}}
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-outline-dark">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>