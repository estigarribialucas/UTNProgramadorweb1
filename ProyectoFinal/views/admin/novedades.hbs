{{!-- Tabla --}}
<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-xl">
            <div class="TablaNovedades ">
                <div class="container ">
                    <nav class="navbar navbar-dark bg-dark rounded-top ">
                        <div class="container-fluid">
                            <a class="navbar-brand">Listado de Novedades</a>
                            <form class="d-flex">
                                <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa-solid fa-file-circle-plus"></i>       Nuevo</a>
                            </form>
                        </div>
                    </nav>
                </div>
                <div class="container">
                    <table class="table table-bordered ">
                        <thead>
                            <tr class="table-secondary">
                                <th scope="col">#</th>
                                <th scope="col">Titulo</th>
                                <th scope="col" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each novedades}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{titulo}}</td>
                                <td class="text-end">
                                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                                            class="fas fa-pencil-alt"></i></a>
                                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                                            class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>