<div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col">
            <p class="text-end text-light">
                <span class="NombreUsuario">Hola {{usuario}}!!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i class="fas
                 fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-xl">
            <div class="TablaNovedades ">
                <div class="container ">
                    <nav class="navbar navbar-dark bg-dark rounded-top">
                        <div class="container-fluid">
                            <a class="navbar-brand">Listado de Novedades</a>
                            <form class="d-flex">
                                <a href="/admin/novedades/agregar" class="btn btn-success">+ Nuevo</a>
                            </form>
                        </div>
                    </nav>
                </div>
                <div class="container">
                    <table class="table table-bordered ">
                        <thead>
                            <tr class="table-secondary">
                                <th scope="col">#</th>
                                <th scope="col">Titulo</th>
                                <th scope="col" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each novedades}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{titulo}}</td>
                                <td class="text-end">
                                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                                            class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>
